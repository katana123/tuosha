<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="92dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="130dp"
        android:text="用户名"
        android:textSize="14sp" />

    <com.example.tuosha.ClearEditText
        android:id="@+id/username"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:background="@drawable/translucent"
        android:hint="请输入用户名"
        android:focusable="true"
        android:inputType="none"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView6"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:text="密码"
        android:textSize="14sp" />

    <com.example.tuosha.ClearEditText
        android:id="@+id/password"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:background="@drawable/translucent"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView8"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:text="确认密码"
        android:textSize="14sp" />

    <com.example.tuosha.ClearEditText
        android:id="@+id/password_confirm"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:background="@drawable/translucent"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView7"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:text="手机号"
        android:textSize="14sp" />

    <com.example.tuosha.ClearEditText
        android:id="@+id/phone"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView9"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        android:background="@drawable/translucent"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="14sp" />

    <com.example.tuosha.ClearEditText
        android:id="@+id/identifying_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView9"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/translucent"
        android:hint="请输入验证码"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:singleLine="true"
        android:textSize="14sp" />

    <Button
        android:id="@+id/msg_button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/identifying_code"
        android:layout_centerHorizontal="true"
        android:background="#EA517F"
        android:text="获取短信验证码"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_toRightOf="@id/identifying_code"
        android:layout_marginLeft="5dp"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="248dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/msg_button"
        android:layout_marginTop="25dp"
        android:layout_marginStart="25dp"
        android:layout_centerHorizontal="true"
        android:background="#214A7D"
        android:text="注册"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_button"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:background="#EA517F"
        android:text="已有账号 前往登录"
        android:textColor="@color/white"/>


</RelativeLayout>